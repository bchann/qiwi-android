<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.brianchan.qiwi_android.RequestActivity"
    tools:showIn="@layout/activity_request">

    <Button
        android:text="see queue"
        android:onClick="switchTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:id="@+id/queueBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Bad and Boujee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:id="@+id/songNameText" />

    <Button
        android:text="reject"
        android:onClick="rejectRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:id="@+id/rejectBtn"
        android:layout_alignBaseline="@+id/acceptBtn"
        android:layout_alignBottom="@+id/acceptBtn"
        android:layout_alignLeft="@+id/songNameText"
        android:layout_alignStart="@+id/songNameText" />

    <Button
        android:text="accept"
        android:onClick="acceptRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginTop="43dp"
        android:id="@+id/acceptBtn"
        android:layout_below="@+id/songNameText"
        android:layout_alignRight="@+id/songNameText"
        android:layout_alignEnd="@+id/songNameText" />
</RelativeLayout>
